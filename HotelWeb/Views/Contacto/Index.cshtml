
@{
    ViewBag.Title = "Informacion de Contacto";
}

<div class="bg-[url('https://images.pexels.com/photos/2339009/pexels-photo-2339009.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2')] bg-cover bg-center min-h-screen flex flex-col overflow-y-auto"
     style="font-family: 'Open Sans', sans-serif;">
    @if (ViewData["mensaje"] != null && ViewData["mensaje"].ToString() != string.Empty)
    {
        <div class="bg-[#264653]/30 text-white">
            <p>@ViewData["mensaje"]</p>
        </div>
    }
    <div class="bg-[#1C1C1C]/30 backdrop-blur-md rounded-t-xl w-4/5 h-3/4 m-auto mt-12 flex-grow text-white">


        <header class="flex justify-around text-black text-lg py-[30px] px-[20px] w-full">
            <button id="toggle-btn" class="block lg:hidden focus:outline-none" >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>

            <div class="w-1/6 flex justify-center">
                <a href="/Home" class="font-semibold text-3xl w-[50px]" style="text-shadow: -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff;"><i class="fa-solid fa-torii-gate"></i></a>
            </div>

            <nav class="hidden lg:flex justify-end gap-4 font-semibold tracking-widest w-5/6">
                <a href="/Home" class="no-underline mx-4"
                   style="text-shadow: -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff;">
                    <i class="fa-solid fa-house"></i> Inicio
                </a>
                <a href="/Reservaciones" class="no-underline mx-4"
                   style="text-shadow: -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff;">
                    <i class="fa-solid fa-calendar-days"></i> Reservaciones
                </a>
            </nav>
        </header>



        <div id="mobile-menu" class="lg:hidden flex flex-col text-center px-4 py-2">
            <a href="/#" class="no-underline mx-4">
                <i class="fa-solid fa-calendar-days"></i> Inicio
            </a>
            <a href="/Reservaciones" class="no-underline mx-4">
                <i class="fa-solid fa-calendar-days"></i> Reservaciones
            </a>
            

        </div>
        <div class="flex flex-col gap-4 p-7 w-full">
            <div class="flex justify-center items-center">
                <div class="flex flex-col items-center justify-center">
                    <img id="imagenPrincipal" src="~/Content/Img/avatar/calamardo.jpg" alt="Imagen" class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="mostrarImagenes()">
                    <div class="p-3 text-center">
                        <p class="text-xl">Misael Roche</p>
                        <p class="text-sm">correo@gmail.com</p>
                    </div>
                </div>
            </div>
            <div id="modal"
                 class="fixed inset-0 bg-black/50 items-center justify-center hidden z-1000 flex">
                <form action="/InicioSesion/RecuperarContrasena" method="post">
                    <div class="bg-[#1C1C1C]/40 p-6 rounded-lg shadow-lg w-96 flex flex-col">
                        <div>
                            <h2 class="text-lg font-bold mb-4 text-center">Elige tu avatar</h2>
                        </div>
                        <div class="flex gap-2 flex-wrap justify-center">
                            <img src="~/Content/Img/avatar/rick.jpg" alt="Imagen"
                                 class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="cambiarImagen(this)">
                            <img src="~/Content/Img/avatar/calamardo.jpg" alt="Imagen"
                                 class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="cambiarImagen(this)">
                            <img src="~/Content/Img/avatar/luffy.jpg" alt="Imagen"
                                 class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="cambiarImagen(this)">
                            <img src="~/Content/Img/avatar/homero.jpg" alt="Imagen"
                                 class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="cambiarImagen(this)">
                            <img src="~/Content/Img/avatar/uno.jpg" alt="Imagen"
                                 class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="cambiarImagen(this)">
                            <img src="~/Content/Img/avatar/pulga.jpg" alt="Imagen"
                                 class="w-[5rem] h-[4.5rem] rounded-full cursor-pointer bg-auto" onclick="cambiarImagen(this)">

                        </div>

                    </div>
                </form>
            </div>
            <form action="/Contacto/Guardar" method="post">
                <div class="flex flex-row flex-wrap m-auto gap-4">
                    <div class="flex flex-1 flex-col border rounded-lg w-full lg:w-[825px] p-8 gap-1">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" id="nombre"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="apellido1">Primer Apellido</label>
                        <input type="text" name="apellido1" id="apellido1"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="apellido2">Segundo Apellido</label>
                        <input type="text" name="apellido2" id="apellido2"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="calle">Calle</label>
                        <input type="text" name="calle" id="calle"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="numero">Numero</label>
                        <input type="text" name="numero" id="numero"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="colonia">Colonia</label>
                        <input type="text" name="colonia" id="colonia"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="codigoPostal">Codigo Postal</label>
                        <input type="text" name="codigoPostal" id="codigoPostal"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="ciudad">Ciudad</label>
                        <input type="text" name="ciudad" id="ciudad"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                    </div>
                    <div class="flex flex-1 flex-col border rounded-lg w-full p-8 gap-1">
                        <label for="correo">Correo electronico</label>
                        <input type="email" name="correo" id="correo"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="celular">Telefono</label>
                        <input type="tel" name="celular" id="celular"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                        <label for="usuario">Usuario</label>
                        <input type="text" name="usuario" id="usuario"
                               class="rounded-full px-3 py-2 bg-transparent border border-white/30 focus:outline-none focus:ring-1 focus:ring-[#FFFFFF]">
                    </div>
                </div>
                <div class="flex justify-center gap-5 mt-2">
                    <button class="bg-[#D72638]/50  rounded-full text-xl px-4 py-2 hover:bg-[#D72638]/70 "
                            name="actualizar">
                        Borrar
                    </button>
                    <button class="bg-[#D72638]/50  rounded-full text-xl px-4 py-2 hover:bg-[#D72638]/70 "
                            name="actualizar" type="submit">
                        Actualizar
                    </button>

                </div>
            </form>
        </div>
    </div>
</div>
<style>
    html, body {
        overflow-y: auto !important;
    }
</style>

